
<h1>Listing content_widgets</h1>


<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
  
<table>

<% @content_widgets.each do |content_widget| %>
  <tr>
    <td><%= content_widget.name %></td>
    <td><%= content_widget.classname %></td>
    <td><%= link_to 'Show', content_widget %></td>
    <td><%= link_to 'Edit', edit_content_widget_path(content_widget) %></td>
    <td><%= link_to 'Destroy', content_widget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'Execute', content_widget, method: :execute %> </td> 
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New content_widget', new_content_widget_path %><br />


